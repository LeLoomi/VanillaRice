{
  "schemaVersion": 1,
  "id": "vanillarice",
  "version": "${version}",

  "name": "Vanilla Rice",
  "description": "This mod adds rice and rice foods in vanilla like fashion! Craft them or find them in the naturals / foods tabs in creative mode :)",
  "authors": [
    "LeLoomi"
  ],
  "contact": {
    "homepage": "https://github.com/LeLoomi",
    "sources": "https://github.com/LeLoomi/VanillaRice"
  },

  "license": "CC BY-SA 4.0",
  "icon": "assets/vanillarice/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.leloomi.vanillarice.VanillaRice"
    ],
    "client": [
      "net.leloomi.vanillarice.VanillaRiceClient"
    ]
  },
  "mixins": [
    "vanillarice.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.12",
    "fabric": "*",
    "minecraft": "~1.21",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
